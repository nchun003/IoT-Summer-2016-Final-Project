<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucr.ece.finalproject.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Light_detection"
        android:id="@+id/switch1"
        android:checked="false"
        android:textSize="20dp"
        android:layout_marginTop="42dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="monospace"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Motion_detection"
        android:id="@+id/switch2"
        android:checked="false"
        android:textSize="20dp"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Light_stat"
        android:id="@+id/lightStat"
        android:textSize="25dp"
        android:layout_marginBottom="84dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toLeftOf="@+id/OnorOff"
        android:layout_toStartOf="@+id/OnorOff"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Light_data"
        android:id="@+id/OnorOff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/lightStat"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"
        android:typeface="monospace"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/imageView"
        android:src="@drawable/lightbulb8"
        android:scaleType="fitXY"
        android:alpha=".50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
